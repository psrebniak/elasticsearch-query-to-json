{
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "module": "commonjs",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "baseUrl": "src",
    "outDir": "lib",
    "lib": [
      "dom",
      "es6",
      "es7",
      "es2015",
      "es2017"
    ],
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "lib",
    "tests"
  ]
}
